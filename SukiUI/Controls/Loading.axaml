<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="SukiUI.Controls.Loading"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="clr-namespace:SukiUI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Styles>
        <Style Selector="suki|Loading">
            <Style.Setters>
                <Setter Property="Transitions">
                    <Transitions>
                        <DoubleTransition Duration="0:0:0.35" Property="Opacity" />
                    </Transitions>
                </Setter>
            </Style.Setters>
            <Style.Animations>
                <Animation
                    Duration="0:0:3"
                    Easing="ExponentialEaseInOut"
                    FillMode="None"
                    IterationCount="INFINITE"
                    PlaybackDirection="Normal">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0" />
                    </KeyFrame>

                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid
                        Height="52"
                        Name="transformGrid"
                        Width="52">


                        <Canvas>
                            <Border
                                Background="{DynamicResource SukiPrimaryColor}"
                                CornerRadius="{DynamicResource MediumCornerRadius}"
                                Height="12"
                                Margin="20,0"
                                Width="12" />
                            <Border
                                Background="{DynamicResource SukiPrimaryColor}"
                                CornerRadius="{DynamicResource MediumCornerRadius}"
                                Height="12"
                                Margin="0,20"
                                Opacity="0.96"
                                Width="12" />
                            <Border
                                Background="{DynamicResource SukiPrimaryColor}"
                                CornerRadius="{DynamicResource MediumCornerRadius}"
                                Height="12"
                                Margin="40,20,0,0"
                                Opacity="0.92"
                                Width="12" />
                            <Border
                                Background="{DynamicResource SukiPrimaryColor}"
                                CornerRadius="{DynamicResource MediumCornerRadius}"
                                Height="12"
                                Margin="20,40,0,0"
                                Opacity="0.88"
                                Width="12" />

                        </Canvas>

                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
    </UserControl.Styles>

</UserControl>