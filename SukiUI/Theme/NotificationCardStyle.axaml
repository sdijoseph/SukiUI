<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
    <Design.PreviewWith>
        <Border Background="{DynamicResource SukiBackground}" Padding="0">
            <NotificationCard Content="Testing" />
        </Border>
    </Design.PreviewWith>
    
    <ControlTheme x:Key="{x:Type NotificationCard}" TargetType="NotificationCard" BasedOn="{StaticResource {x:Type NotificationCard}}">
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="Width" Value="400" />
        <Setter Property="Height" Value="110" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource SukiBackground}" />
        <Setter Property="RenderTransformOrigin" Value="50%,75%" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Yellow" />
        <Setter Property="CornerRadius" Value="{DynamicResource SmallCornerRadius}" />
        <Setter Property="Template">
            <ControlTemplate>
                <LayoutTransformControl Name="PART_LayoutTransformControl" UseRenderTransform="True">
                    <Border
                        Background="{DynamicResource SukiBackground}"
                        BorderBrush="{DynamicResource SukiControlBorderBrush}"
                        BorderThickness="1"
                        BoxShadow="{DynamicResource SukiPopupShadow}"
                        CornerRadius="10"
                        Margin="15,15,15,15">
                        <Border
                            Background="{DynamicResource SukiBackground}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            ClipToBounds="True"
                            CornerRadius="10">
                            <DockPanel>
                                <avalonia:MaterialIcon Height="26" Width="26" Kind="InformationCircle" DockPanel.Dock="Left" Margin="11,11,5,5" VerticalAlignment="Top" Foreground="{DynamicResource SukiPrimaryColor}"></avalonia:MaterialIcon>
                                <Panel Classes="TextBold"
                                    DockPanel.Dock="Top"
                                    Height="4"  Margin="0,-3,0,0"
                                    x:Name="PART_HeaderBar" />
                                <ContentControl Content="{TemplateBinding Content}" Name="PART_Content" />
                            </DockPanel>
                        </Border>
                    </Border>
                </LayoutTransformControl>
            </ControlTemplate>
        </Setter>
 <Style Selector="^/template/ ContentControl#PART_Content">
        <Setter Property="MinHeight" Value="64" />
    </Style>

    <Style Selector="^[IsClosing=true] /template/ LayoutTransformControl#PART_LayoutTransformControl">
        <Setter Property="RenderTransformOrigin" Value="50%,0%" />
        <Style.Animations>
            <Animation
                Duration="0:0:0.75"
                Easing="QuadraticEaseOut"
                FillMode="Forward">
                <KeyFrame Cue="0%">
                    <Setter Property="TranslateTransform.X" Value="0" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame Cue="70%">
                    <Setter Property="TranslateTransform.X" Value="800" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="ScaleTransform.ScaleY" Value="0" />
                    <Setter Property="TranslateTransform.X" Value="800" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="^[IsClosing=true]">
        <Style.Animations>
            <Animation
                Duration="0:0:1.25"
                Easing="QuadraticEaseOut"
                FillMode="Forward">
                <KeyFrame Cue="100%">
                    <Setter Property="IsClosed" Value="True" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="^ /template/ Panel#PART_HeaderBar">
        <Setter Property="Background" Value="{DynamicResource SukiBackground}" />
    </Style>
    <Style Selector="^ /template/ Panel#PART_HeaderBar">
        <Setter Property="Background" Value="{DynamicResource SukiBackground}" />
    </Style>
    <Style Selector="^:success">
        
        <Setter Property="Template">
            <ControlTemplate>
                <LayoutTransformControl Name="PART_LayoutTransformControl" UseRenderTransform="True">
                    <Border
                        Background="{DynamicResource SukiBackground}"
                        BorderBrush="{DynamicResource SukiControlBorderBrush}"
                        BorderThickness="1"
                        BoxShadow="{DynamicResource SukiPopupShadow}"
                        CornerRadius="10"
                        Margin="15,15,15,15">
                        <Border
                            Background="{DynamicResource SukiBackground}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            ClipToBounds="True"
                            CornerRadius="10">
                            <DockPanel>
                                <avalonia:MaterialIcon Height="26" Width="26" Kind="CheckCircle" DockPanel.Dock="Left" Margin="11,11,5,5" VerticalAlignment="Top" Foreground="ForestGreen"></avalonia:MaterialIcon>
                                <Panel Classes="TextBold"
                                       DockPanel.Dock="Top"
                                       Height="4"  Margin="0,-3,0,0"
                                       x:Name="PART_HeaderBar" />
                                <ContentControl Content="{TemplateBinding Content}" Name="PART_Content" />
                            </DockPanel>
                        </Border>
                    </Border>
                </LayoutTransformControl>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="^:warning">
         <Setter Property="Template">
            <ControlTemplate>
                <LayoutTransformControl Name="PART_LayoutTransformControl" UseRenderTransform="True">
                    <Border
                        Background="{DynamicResource SukiBackground}"
                        BorderBrush="{DynamicResource SukiControlBorderBrush}"
                        BorderThickness="1"
                        BoxShadow="{DynamicResource SukiPopupShadow}"
                        CornerRadius="10"
                        Margin="15,15,15,15">
                        <Border
                            Background="{DynamicResource SukiBackground}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            ClipToBounds="True"
                            CornerRadius="10">
                            <DockPanel>
                                <avalonia:MaterialIcon Height="26" Width="26" Kind="WarningCircle" DockPanel.Dock="Left" Margin="11,11,5,5" VerticalAlignment="Top" Foreground="DarkOrange"></avalonia:MaterialIcon>
                                <Panel Classes="TextBold"
                                       DockPanel.Dock="Top"
                                       Height="4"  Margin="0,-3,0,0"
                                       x:Name="PART_HeaderBar" />
                                <ContentControl Content="{TemplateBinding Content}" Name="PART_Content" />
                            </DockPanel>
                        </Border>
                    </Border>
                </LayoutTransformControl>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="^:error">
       <Setter Property="Template">
            <ControlTemplate>
                <LayoutTransformControl Name="PART_LayoutTransformControl" UseRenderTransform="True">
                    <Border
                        Background="{DynamicResource SukiBackground}"
                        BorderBrush="{DynamicResource SukiControlBorderBrush}"
                        BorderThickness="1"
                        BoxShadow="{DynamicResource SukiPopupShadow}"
                        CornerRadius="10"
                        Margin="15,15,15,15">
                        <Border
                            Background="{DynamicResource SukiBackground}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            ClipToBounds="True"
                            CornerRadius="10">
                            <DockPanel>
                                <avalonia:MaterialIcon Height="26" Width="26" Kind="Error" DockPanel.Dock="Left" Margin="11,11,5,5" VerticalAlignment="Top" Foreground="DarkRed"></avalonia:MaterialIcon>
                                <Panel Classes="TextBold"
                                       DockPanel.Dock="Top"
                                       Height="4"  Margin="0,-3,0,0"
                                       x:Name="PART_HeaderBar" />
                                <ContentControl Content="{TemplateBinding Content}" Name="PART_Content" />
                            </DockPanel>
                        </Border>
                    </Border>
                </LayoutTransformControl>
            </ControlTemplate>
        </Setter>
    </Style>
        
    </ControlTheme>
    


   
</ResourceDictionary>
